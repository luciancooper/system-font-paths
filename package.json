{
  "name": "system-font-paths",
  "version": "1.0.0",
  "description": "Finds the paths of all locally installed system fonts",
  "main": "index.js",
  "types": "index.d.ts",
  "gypfile": true,
  "files": [
    "index.js",
    "index.d.ts",
    "binding.gyp",
    "src"
  ],
  "keywords": [
    "fonts",
    "font",
    "otf",
    "ttf",
    "ttc",
    "opentype"
  ],
  "scripts": {
    "build": "node-gyp rebuild",
    "clean": "node-gyp clean",
    "test": "jest",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=14"
  },
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/system-font-paths.git"
  },
  "commitlint": {
    "extends": [
      "@lcooper"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": [
      "@lcooper/eslint-config",
      "@lcooper/eslint-config-jest"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "noStackTrace": true
  },
  "dependencies": {
    "node-addon-api": "^6.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@lcooper/commitlint-config": "^1.1.0",
    "@lcooper/eslint-config": "^2.2.2",
    "@lcooper/eslint-config-jest": "^1.3.0",
    "eslint": "^8.35.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^4.3.8",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "node-gyp": "^9.3.1"
  }
}
